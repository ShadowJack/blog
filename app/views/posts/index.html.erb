<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<% @posts.each do |post| %>
	<div class="hero-unit">
		<h2><%= post.title %></h2>
		<br><br>
		<p><%= raw post.cut_content %></p>
		<p><%= link_to 'Читать далее', post_path(post), :class => "btn btn-info btn-small" %></p>
	</div>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-primary' %>
