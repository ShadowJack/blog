<!-- Put this script tag to the <head> of your page -->
<script type="text/javascript" src="http://vk.com/js/api/share.js?11" charset="windows-1251"></script>

<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="hero-unit">
	<h2><%= @post.title %></h2>
	<%= raw @post.content %>
	
	<ul class="pager">
	<% unless @prev_post.nil? %>
	  <li class="previous">
	    <%= link_to raw("&larr;Newer"), post_path(@prev_post) %>
	  </li>
	<% else %>
	  <li class="previous disabled">
	    <%= link_to raw("&larr;Newer"), '#' %>
	  </li>
	<% end %>
	<% unless @next_post.nil? %>
	  <li class="next">
	    <%= link_to raw('Older&rarr;'), post_path(@next_post) %>
	  </li>
	<% else %>
	  <li class="next disabled">
	    <%= link_to raw('Older&rarr;'), '#' %>
	  </li>
	<% end %>
	</ul>
	
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn'  %>
  <% if can? :update, @post%>
  	<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, @post%>
  	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(@post),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
  <% end %>
	<div class="btn-group pull-left" style="margin-right: 10px; margin-top: 5px;" >
	<script type="text/javascript"><!--
	document.write(VK.Share.button(false,{type: "link", text: "Сохранить"}));
	--></script>
</div>
