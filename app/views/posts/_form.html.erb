<%= redactor_lang("ru") %>

<%= simple_form_for @post, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>

	<%= f.input :title, :input_html => {:class => 'text_field'}, :label_html => {:class => "label"} %>
	<%= f.input :content, :input_html => {:class => 'text_area redactor', :id => "redactor"},
								:label_html => {:class => "label"} %>
	<%= f.input :tag_ids, :collection => Tag.all.map{|elem| [elem.id, elem.tag]}, :as => :check_boxes, 
								:label_method => :last, :value_method => :first, 
								:label_html => {:class => "label"}, :label => "Tags" %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary'  %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
  </div>
<% end %>
