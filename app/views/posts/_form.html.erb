
<%= simple_form_for @post, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>

	<%= f.input :title, :input_html => {:class => 'text_field'}, :label_html => {:class => "label"} %>
	<%= f.input :content, :input_html => {:class => 'text_area', :id=>'content_redactor'}, :label_html => {:class => "label"} %>
	<%= f.input :logo, :input_html => {:class => 'text_field'}, :label_html => {:class => "label"} %>  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary'  %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
  </div>
<% end %>

<script type="text/javascript">
    $('#content_redactor').wysihtml5();
</script>